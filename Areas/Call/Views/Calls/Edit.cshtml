@model CallCenter.Models.Calls

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Calls</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CallId" />
            <div class="form-group">
                <label asp-for="CallerIndividualId" class="control-label"></label>
                <select asp-for="CallerIndividualId" class="form-control" asp-items="ViewBag.CallerIndividualId"></select>
                <span asp-validation-for="CallerIndividualId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallAttendeeId" class="control-label"></label>
                <select asp-for="CallAttendeeId" class="form-control" asp-items="ViewBag.CallAttendeeId"></select>
                <span asp-validation-for="CallAttendeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallStateId" class="control-label"></label>
                <select asp-for="CallStateId" class="form-control" asp-items="ViewBag.CallStateId"></select>
                <span asp-validation-for="CallStateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
